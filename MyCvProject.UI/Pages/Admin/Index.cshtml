@page
@model MyCvProject.UI.Pages.Admin.IndexModel
@{

}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">مدیریت سایت - خوش آمدید</h1>
    </div>
</div>

<div class="row">
    <div class="alert alert-success col-md-4">
        <i class="fa fa-user fa-3x"></i>
        <span class="col-md-offset-2"style="font-weight: bold;font-size: 20px">تعداد کاربران : @Model.AdminStatisticsViewModel.UserCount</span>
    </div>
    <div class="alert alert-info col-md-4">
        <i class="fa fa-book fa-3x"></i>
        <span class="col-md-offset-2"style="font-weight: bold;font-size: 20px">تعداد دروس : @Model.AdminStatisticsViewModel.CourseCount</span>
    </div>
    <div class="alert alert-warning col-md-4">
        <i class="fa fa-group fa-3x"></i>
        <span class="col-md-offset-2"style="font-weight: bold;font-size: 20px">تعداد دسته بندی ها اصلی : @Model.AdminStatisticsViewModel.CourseGroupCount</span>
    </div>
    <div class="alert alert-success col-md-4">
        <i class="fa fa-comment fa-3x"></i>
        <span class="col-md-offset-2"style="font-weight: bold;font-size: 20px">تعداد کامنت ها : @Model.AdminStatisticsViewModel.CommentCount</span>
    </div>
</div>
